<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56A9F6"
    tools:context="com.idifyltd.idify.LandingPage"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/IdifyLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/ic_launcher"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/landingPageFacebookLoginButton"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="#0B24FD"
        android:text="Login via Facebook"
        android:textColor="#fff"
        app:layout_constraintTop_toBottomOf="@+id/landingPageSignUpButton"
        tools:layout_editor_absoluteX="8dp" />

    <Button
        android:id="@+id/landingPageSignUpButton"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:background="#0B24FD"
        android:text="Join Idify"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="471dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:background="none"
        android:text="Have an account already? Click Me"
        android:textColor="#fff"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toBottomOf="@+id/landingPageFacebookLoginButton" />
</android.support.constraint.ConstraintLayout>
