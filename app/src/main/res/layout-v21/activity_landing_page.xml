<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#56A9F6"
    tools:context="com.idifyltd.idify.LandingPage"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <ImageView
        android:id="@+id/IdifyLogo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/Company logo (White version)"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/whitelogo1" />

    <Button
        android:id="@+id/landingPageFacebookLoginButton"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="#0B24FD"
        android:text="@string/Login via Facebook"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/landingPageLoginButton"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/landingPageSignUpButton"
        android:layout_width="395dp"
        android:layout_height="50dp"
        android:layout_marginBottom="8dp"
        android:background="#0B24FD"
        android:text="@string/join_idify"
        android:textColor="#fff"
        app:layout_constraintBottom_toTopOf="@+id/landingPageFacebookLoginButton"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/landingPageLoginButton"
        android:layout_width="395dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#56A9F6"
        android:contentDescription="@string/Company Logo (White Version)"
        android:elevation="0dp"
        android:text="@string/have_an_account_already_click_me"
        android:textColor="#fff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
